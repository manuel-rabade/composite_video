use Image::BMP;

die 'Missing file: ' .  $ARGV[0] unless (-f $ARGV[0]);

my $img = new Image::BMP(file => $ARGV[0]);

die 'Invalid bmp!' unless ($img);

printf("// %ix%ix%i\n\n", $img->{Width}, 
       $img->{Height}, $img->{ColorsUsed});

for my $y (0 .. ($img->{Height} - 1)) {
    my $byte = 0;
    for my $x (0 .. ($img->{Width} - 1)) {
        if ($img->xy($x,$y) > 0) {
            $byte += 2**(7-($x % 8));
        }
        if (($x+1) % 8 == 0) {
            printf('0x%.2x, ',$byte);
            $byte = 0;
        }
    }
    print "\n";
}
